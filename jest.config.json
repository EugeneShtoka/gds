{
    "transform": {
        "^.+\\.ts?$": [
            "ts-jest",
            { "tsconfig": "./tsconfig.json" }
        ]
    },

    "testRegex": "/__tests__/.*test.ts$",

    "testPathIgnorePatterns": [ "/node_modules/", "/dist/" ],

    "moduleNameMapper": {
        "^~/(.*)$": "<rootDir>/src/$1"
    },

    "setupFilesAfterEnv": [ "jest-extended" ]
}