{
    "transform": {
        "^.+\\.ts?$": [
            "ts-jest",
            { "tsconfig": "./tsconfig.json" }
        ]
    },

    "testPathIgnorePatterns": [ "/node_modules/" ],

    "moduleNameMapper": {
        "^~/(.*)$": "<rootDir>/src/$1"
    },

    "setupFilesAfterEnv": [ "jest-extended" ]
}